{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(g++ build and debug active file)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main_program",  // Path to your executable
            "args": [],   // Arguments to pass to your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // If you want to see console output
            "MIMode": "gdb",          // If you're on Linux or using WSL
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Ensure gdb is installed
            "preLaunchTask": "build",          // Task to run before launching the debugger
            "internalConsoleOptions": "neverOpen",
            "osx": {
                "program": "${workspaceFolder}/main_program",
                "miDebuggerPath": "/usr/bin/lldb"
            },
            "linux": {
                "program": "${workspaceFolder}/main_program",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "windows": {
                "program": "${workspaceFolder}/main_program.exe",
                "miDebuggerPath": "C:/MinGW/bin/gdb.exe"
            }
        }
    ]
}
